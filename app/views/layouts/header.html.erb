<!DOCTYPE html>
<html>
  <head>
        <% if logged_in? %>
          <%= link_to "Log out", logout_path, method: "DELETE" %>
        <% end %>

        <%= stylesheet_link_tag 'application' %>
      </head>

      <body>
        <% flash.each do |type, msg| %>
           <div>
             <%= msg %>
           </div>
         <% end %>
        <%= yield %>
      </body>
  </html>
